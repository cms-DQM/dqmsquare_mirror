[Unit]
Description="DQM^2 grabber/parser/server service; usage: systemctl start dqmsquare_mirror@robber.service dqmsquare_mirror@parser.service dqmsquare_mirror@server.service"

[Service]
Type=simple
ExecStart=/bin/bash /usr/bin/dqmsquare_mirror_wrapper.sh %i
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target 
